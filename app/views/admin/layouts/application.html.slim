doctype html
html.bg-shiro lang="ja"
  head
    title Gremas
    = display_meta_tags(default_meta_tags)
    meta[name="viewport" content="width=device-width,initial-scale=1"]
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  body
    header
      = render 'admin/layouts/header'
      = render 'layouts/flash_message'
    main.overflow-hidden.flex.items-start.justify-start
      = render 'admin/layouts/sidebar'
      .bg-white.h-85vh.rounded-2xl.shadow-lg.w-full.m-2.min-h-75vh
        .text-left.text-nibi.p-4
          = yield
    footer
